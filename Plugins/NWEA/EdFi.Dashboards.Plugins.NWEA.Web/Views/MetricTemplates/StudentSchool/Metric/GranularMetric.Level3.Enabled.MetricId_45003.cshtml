@model IGranularMetric
<tr id="vMetric@(Model.MetricVariantId)" style="height: 16px;">
    <td class="SubMetricBG" title="@Model.ToolTip">
        <table cellpadding="0" cellspacing="0" style="width: 100%; border-bottom: 0; border-top: 0; margin-top: 0;">
            <tr>
                <td style="min-width: 157px;">
                    <p class="arrow" style="padding-left: 0;" title="@Model.Values["AssessmentTitle"]">
                        <i class="icon-blank"></i>
                        <a name="m@(Model.MetricVariantId)"></a><span id="vMetricVariantId@(Model.MetricVariantId)" class="metricId">@(Model.MetricId)-@(Model.MetricVariantType)</span>
                        <span id="vName@(Model.MetricVariantId)" class="MetricBulletTitle SquareBulletMetricBG">@(Model.DisplayName)</span>
                        @if (!String.IsNullOrWhiteSpace(Model.Context))
                        {
                            <span id="vContext@(Model.MetricVariantId)" class="MetricBulletTitle">&nbsp;(@Model.Context)</span>
                        }
                        @Html.Partial("MetricFootnoteLabelSuperText", Model.Footnotes)
                    </p>
                </td>
                <td>
                    @Html.Partial("UnderConstruction", (MetricBase)Model)
                </td>
            </tr>
        </table>
    </td>
    <td style="text-align: center;">
        <span id="vRIT@(this.GetMetricRenderingContextValue("parentcontainermetricid"))">
            @if (Model.Values["RitScore"] != null)
            {
                @Model.Values["RitScore"]
            }
        </span>
    </td>
    <td style="text-align: center;">
        <span id="vStatus@(Model.MetricVariantId)">
            @if (Model.Values["StandardError"] != null)
            {
                @Model.Values["StandardError"]
            }
        </span>
    </td>
    <td style="text-align: center;">
        <span id="vStatus@(Model.MetricVariantId)">
            @if (Model.Value != null)
            {
                @Html.Partial("StatusLabel", Model.State, new ViewDataDictionary { { "DisplayText", Model.Value } })
            }
        </span>
    </td>
    <td style="text-align: center;">
        <span id="vBenchmark@(Model.MetricVariantId)" style="font-size:12px;font-weight:bold;">
            @Html.Partial("Trend", Model.Trend)
        </span>
    </td>
    <td style="text-align: center;">
        @Html.Partial("ContextMenu", (MetricBase)Model)
    </td>
</tr>